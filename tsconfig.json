{
  // Setup source directory.
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    // Do not compile code.
    "noEmit": true,

    // Allow any type.
    "noImplicitAny": false,

    // Do not check type for this (pointers).
    "noImplicitThis": false,
    "noImplicitReturns":false,

    // Enable JSX.
    "jsx": "react",

    // Use dom and latest ES typings.
    "lib": ["dom", "es2018"],

    // Use synthetic es modules.
    "allowSyntheticDefaultImports": true,

    // Strict type checks.
    "strict": true,

    // Dead code checks.
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Possible bug checks.
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
    "exclude": [
        "node_modules",
        "src/marker-clusterer/markerclustererplus.ts"
    ]

}