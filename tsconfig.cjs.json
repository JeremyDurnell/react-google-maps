{
  // Use base config.
  "extends": "./tsconfig.json",
  // Exclude tests source directory.
  "exclude": [
    "**/__docs__/**/*.ts",
    "**/__docs__/**/*.tsx",
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx"
  ],
  "compilerOptions": {
    // Support es5 for browsers.
    "target": "es5",
    // Create d.ts declarations.
    "declaration": true,
    "declarationDir": "typings"
  }
}
